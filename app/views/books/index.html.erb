<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to "Show",book_path(book.id) %></span></td>
      <td><span><%= link_to "Edit",edit_book_path(book.id) %></span></td>
      <td><span><%= link_to "Destroy",destroy_book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></span></td>
    </tr>
  </tbody>
<% end %>
</table>

<h1>New book</h1>
<%= form_with model: @books, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  
  <h4>Body</h4>
  <%= f.text_area:body %>
  
  <br><%= f.submit 'Create Book' %></br>
<% end %>
